<table class="ui fixed table">
  <thead>
  <tr>
    <th>Date</th>
    <th>Code</th>
    <th>Temperature</th>
    <th>WindSpeed</th>
    <th>Pressure</th>  
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
     {{#each station.readings}}
      <tr>
        <td> {{date}}</td>
        <td>
          {{code}}
        </td>
        <td>
          {{temperature}}
        </td>
        <td>
          {{windSpeed}}
        </td>
        <td>
          {{pressure}}
        </td>       
        <td>
          <a href="/reading/{{../station.id}}/editReading/{{id}}" class="ui icon button">
            <i class="pencil alternate icon"></i>
          </a>
        </td>
        <td>
          <a href="/station/{{../station.id}}/removeReading/{{id}}" class="ui icon button">
            <i class="red icon trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
              
<form class="ui stacked segment form" action="/station/{{station.id}}/addReading" method="POST">
    <label class="ui blue header"><h3>Add New Reading</h3></label>
    <div class="five fields">
        <div class="field">
            <label>Weather Code</label>
            <select name="code" class="ui dropdown" id="select" required="required">
                <option value="">Code</option>
                <option value="100">100-Clear</option>
                <option value="200">200-Partial Clouds</option>
                <option value="300">300-Cloudy</option>
                <option value="400">400-Light Showers</option>
                <option value="500">500-Heavy Showers</option>
                <option value="600">600-Rain</option>
                <option value="700">700-Snow</option>
                <option value="800">800-Thunder</option>
            </select>
            </div>
        <div class="field">
            <label>Temperature</label>
            <input placeholder="0.0c" type="number" name="temperature" required="required" min="-20"
                   max="50" step="0.1">
        </div>
        <div class="field">
            <label>WindSpeed</label>
            <input placeholder="0.0kMh" type="number" name="windSpeed" required="required" min="0"
                   max="200" step="0.1">
        </div>
        <div class="field">
            <label>WindDirection</label>
            <input placeholder="000deg" type="number" name="windDirection" required="required" min="0"
                   max="360" step="0.01">
        </div>
        <div class="field">
            <label>Pressure</label>
            <input placeholder="0000hPa" type="number" name="pressure" required="required" min="900"
                    max="1200" step="1">
        </div>
    </div>
    <button class="ui blue submit button">Submit Report</button>
</form>